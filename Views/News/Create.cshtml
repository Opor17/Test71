@using _71BootlegStore.ViewModels
@model NewsVM
@{
    ViewData["Title"] = "News";
}

<div class="content">

    <h2 class="intro-y text-lg font-medium mt-10">
        Create Product
    </h2>

    <div class="intro-y mt-3">

        <form id="frmAuthUser" method="post" enctype="multipart/form-data">
            @* User Form *@
            <div class="intro-y box p-5 mt-5">
                <div class="border border-slate-200/60 rounded-md p-5">
                    <div class="font-medium text-base flex items-center border-b border-slate-200/60 pb-2">@Model.Title</div>

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="@Model.Title">

                    <div class="col-span-12 mt-3">
                        <div class="form-inline grid grid-cols-12 gap-2">
                            <label asp-for="@Model.New.Image"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.New.Image)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <input name="file" type="file" class="form-control" asp-for="@Model.New.Image">
                                <input type="text" class="form-control" asp-for="@Model.New.Image" hidden>
                                <span class="text-danger" asp-validation-for="@Model.New.Image"></span>
                            </div>

                            <label asp-for="@Model.New.Status"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.New.Status)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <select class="form-select" asp-for="@Model.New.Status" required>
                                    <option value="true" selected>Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <input type="hidden">

            <div class="flex justify-center flex-col md:flex-row gap-2 mt-5">
                <a asp-controller="News" asp-action="Index" class="btn border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">Cancel</a>
                <button type="submit" class="btn btn-primary w-full md:w-52">Save</button>
            </div>

        </form>

    </div>
</div>

@section Scripts
{
    <script>
        const breadcrumbs = [
            {
                "label": "Master Data",
                "url": "javascript:;"
            },
            {
                "label": "Authorize",
                "url": "javascript:;"
            },
            {
                "label": "Create",
                "url": "javascript:;"
            }
        ];
        activeMenu(breadcrumbs);

        $(document).ready(function () {

        });
    </script>
}