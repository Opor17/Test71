@using _71BootlegStore.ViewModels
@model AuthUserVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="light">
<!-- BEGIN: Head -->

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/images/71BootlegStore_Logo04.png" rel="shortcut icon">
    <title>Login - CATALER</title>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
</head>
<!-- END: Head -->

<body class="login">
    <div class="container sm:px-10">

        <partial name="_Notification" />

        <div class="block xl:grid grid-cols-2 gap-4">
            <!-- BEGIN: Login Info -->
            <div class="hidden xl:flex flex-col min-h-screen">
                <div class="my-auto">
                    <img alt="Midone - HTML Admin Template" class="-intro-x w-3/5 -mt-16" src="~/images/undraw_control_panel_re_y3ar.svg">
                </div>
            </div>
            <!-- END: Login Info -->
            <!-- BEGIN: Login Form -->
            <div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
                <div class="my-auto mx-auto xl:ml-20 bg-white dark:bg-darkmode-600 xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
                    <form id="frmAuthUser" method="post" asp-action="Add" asp-controller="Register">

                        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
                            Register
                        </h2>
                        <div class="intro-x mt-2 text-slate-400 dark:text-slate-400 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
                        <div class="intro-x mt-8">
                            <input type="text" class="intro-x login__input form-control py-3 px-4 block" asp-for="@Model.ApplicationUser.UserName" placeholder="UserName" required>
                            <input type="email" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.ApplicationUser.Email" placeholder="Email" required>
                            <input type="text" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.ApplicationUser.FirstName" placeholder="FirstName" required>
                            <input type="text" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.ApplicationUser.LastName" placeholder="LastName" required>
                            <div id="privatePassword" class="col-span-12">
                                <input type="password" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.Password" autocomplete="new-password" aria-required="true" placeholder="Password" required>
                                <input type="password" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="ConfirmPassword" required>
                            </div>
                            <div class="form-check">
                                <div class="bordercolor">
                                    <input id="checkbox-switch-1" class="form-check-input" type="checkbox">
                                </div>
                                <label class="form-check-label" for="checkbox-switch-1">Show Password</label>
                            </div>
                            <textarea type="text" class="intro-x login__input form-control py-3 px-4 block mt-4" asp-for="@Model.ApplicationUser.Address" placeholder="Address" required></textarea>
                        </div>
                        <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                            <button type="submit" class="btn btn-primary py-3 px-4 w-full xl:w-32 xl:mr-3 align-top submit">Register</button>
                            <a asp-controller="Login" asp-action="Index"
                               class="btn btn-outline-secondary py-3 px-4 w-full xl:w-32 mt-3 xl:mt-0 align-top">
                                Sign in
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- END: Login Form -->
    </div>


    <script src="~/js/app.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {

            // toggle password
            $('#checkbox-switch-1').on('click', function () {
                if ($(this).is(':checked')) {
                    $('#Password').attr('type', 'text');
                    $('#ConfirmPassword').attr('type', 'text');
                } else {
                    $('#Password').attr('type', 'password');
                    $('#ConfirmPassword').attr('type', 'password');
                }
            });
        });
    </script>
</body>

</html>