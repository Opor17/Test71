@using _71BootlegStore.ViewModels
@model AuthUserVM

@{
    ViewData["Title"] = "Setting User";
}

<style>
    .grid .active {
        background-color: aqua;
    }
</style>

<div class="content py-4">
    <div class="intro-y mt-3">

        <form id="frmAuthUser" method="post">
            @* User Form *@
            <div class="intro-y box p-5 mt-5">
                <div class="border border-slate-200/60 rounded-md p-5">
                    <div class="font-medium text-base flex items-center border-b border-slate-200/60 pb-2">@Model.Title</div>

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="@Model.Title">

                    <div class="col-span-12 mt-3">
                        <div class="form-inline grid grid-cols-12 gap-2">
                            <label asp-for="@Model.ApplicationUser.Id" class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0 hidden"></label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4 hidden">
                                <input type="text" class="form-control" asp-for="@Model.ApplicationUser.Id" required>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.Id"></span>
                            </div>

                            <label asp-for="@Model.ApplicationUser.UserName"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.UserName)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <input type="text" class="form-control" asp-for="@Model.ApplicationUser.UserName" required>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.UserName"></span>
                            </div>

                            <label asp-for="@Model.ApplicationUser.Email"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.Email)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <input type="email" class="form-control" asp-for="@Model.ApplicationUser.Email" required>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.Email"></span>
                            </div>

                            <label asp-for="@Model.ApplicationUser.FirstName"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.FirstName)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <input type="text" class="form-control" asp-for="@Model.ApplicationUser.FirstName" required>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.FirstName"></span>
                            </div>

                            <label asp-for="@Model.ApplicationUser.LastName"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.LastName)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <input type="text" class="form-control" asp-for="@Model.ApplicationUser.LastName" required>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.LastName"></span>
                            </div>

                            <label asp-for="@Model.RoleId"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.RoleId)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <select class="form-select" asp-for="@Model.RoleId" asp-items="@Model.RoleList" required>
                                    <option value="">Select...</option>
                                </select>
                                <span class="text-danger" asp-validation-for="@Model.RoleId"></span>
                            </div>

                            <label asp-for="@Model.ApplicationUser.IsActive"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.IsActive)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <select class="form-select" asp-for="@Model.ApplicationUser.IsActive" required>
                                    <option value="true" selected>Active</option>
                                    <option value="false">Inactive</option>
                                </select>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.IsActive"></span>
                            </div>

                            <div id="privatePassword" class="col-span-12">
                                <div class="form-inline grid grid-cols-12 gap-2">
                                    <label asp-for="@Model.Password"
                                           class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                        <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.Password)
                                    </label>
                                    <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                        <input type="password" class="form-control" asp-for="@Model.Password" autocomplete="new-password" aria-required="true">
                                        <span class="text-danger" asp-validation-for="@Model.Password"></span>
                                    </div>

                                    <label asp-for="@Model.ConfirmPassword"
                                           class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                        <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ConfirmPassword)
                                    </label>
                                    <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                        <input type="password" class="form-control" asp-for="@Model.ConfirmPassword" autocomplete="new-password" aria-required="true">
                                        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                                    </div>

                                    <div class="col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2"></div>
                                    <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                        <div class="form-check">
                                            <div class="bordercolor">
                                                <input id="checkbox-switch-1" class="form-check-input" type="checkbox">
                                            </div>
                                            <label class="form-check-label" for="checkbox-switch-1">Show Password</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <label asp-for="@Model.ApplicationUser.Address"
                                   class="form-label col-span-12 md:col-span-2 xl:col-span-2 2xl:col-span-2 mr-0">
                                <span class="text-danger mr-1">*</span>@Html.LabelFor(m => m.ApplicationUser.Address)
                            </label>
                            <div class="col-span-12 md:col-span-4 xl:col-span-4 2xl:col-span-4">
                                <textarea type="text" class="form-control" asp-for="@Model.ApplicationUser.Address" required></textarea>
                                <span class="text-danger" asp-validation-for="@Model.ApplicationUser.Address"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden">

            <div class="flex justify-center flex-col md:flex-row gap-2 mt-5">
                <a asp-controller="Home" asp-action="Index"
                   class="btn border-slate-300 dark:border-darkmode-400 text-slate-500 w-full md:w-52">
                    Cancel
                </a>
                <button type="submit" class="btn btn-primary w-full md:w-52 submit">Save</button>
            </div>

        </form>

    </div>
</div>


@section Scripts
{
    <script>
        const breadcrumbs = [
            {
                "label": "Master Data",
                "url": "javascript:;"
            },
            {
                "label": "Setting User",
                "url": "javascript:;"
            }
        ];
        activeMenu(breadcrumbs);

        $(document).ready(function () {

            // toggle password
            $('#checkbox-switch-1').on('click', function () {
                if ($(this).is(':checked')) {
                    $('#Password').attr('type', 'text');
                    $('#ConfirmPassword').attr('type', 'text');
                } else {
                    $('#Password').attr('type', 'password');
                    $('#ConfirmPassword').attr('type', 'password');
                }
            });

            // toggle checkbox
            $('#all').on('change', function () {
                if ($(this).prop('checked')) {
                    $(this).closest('table').find('input:checkbox').prop('checked', true);
                } else {
                    $(this).closest('table').find('input:checkbox').prop('checked', false);
                }
            });
        });
    </script>
}