<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/images/71BootlegStore_Logo04.png" rel="shortcut icon">
    <title>@ViewData["Title"] - 71BootlegStore</title>
    <link rel="stylesheet" href="~/css/app.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/DataTables/datatables.min.css">
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.4.2-web/css/all.min.css">

    <style>
        /* custom style */
        /* Author: Night */
        .dataTables_wrapper .dataTables_length select {
            width: 100px;
        }

        table tr > td {
            white-space: nowrap;
        }

        table.dataTable {
            width: 100% !important;
        }

        .border-danger {
            border: 1px solid red;
        }

        .text-end {
            text-align: end !important;
        }

        .text-center {
            text-align: center !important;
        }

        table.dataTable tbody td.text-end,
        table.dataTable tfoot th.text-end {
            padding-right: 2rem !important;
        }

        .js-delete {
            cursor: pointer;
            font-size: 1.1rem;
        }

        .form-inline .form-label {
            margin-bottom: 0px;
            margin-right: 0;
            text-align: right;
        }
    </style>
</head>
<body>
    <div class="py-5 md:py-0">
        <partial name="_Notification" />
        <partial name="_Mobile" />
        <partial name="_TopBar" />

            <partial name="_NavBar" />

        <div class="flex overflow-hidden">

            @RenderBody()

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/app.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/lib/sweetalert/sweetalert2.js"></script>
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <script>

        // ==== show progress before ajax send success
        $(document).ajaxStart(function () {
            $('.loading').show();
        });

        $(document).ajaxStop(function () {
            $('.loading').hide();
        });

        function activeMenu(breadcrumbs = []) {
            const homePage = {
                "label": "Application",
                "url": "@Url.Action("Index", "Home")"
            };
            breadcrumbs.unshift(homePage);

            breadcrumbs.forEach(breadcrumb => {
                let listItem = "";
                if (breadcrumb.label === "Application") {
                    listItem = `<li class="breadcrumb-item"><a href="${breadcrumb.url}">${breadcrumb.label}</a></li >`;
                } else {
                    listItem = `<li class="breadcrumb-item active" aria-current="page">${breadcrumb.label}</li>`;
                }
                $('nav[aria-label="breadcrumb"] ol').append(listItem);
            });
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
